        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expense Manager" Height="200" Width="400">
    <Grid>
        <Button Name="ImportButton" Content="Імпортувати Excel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10" Click="ImportButton_Click"/>
        <Button Name="UploadButton" Content="Завантажити в Google Sheets" HorizontalAlignment="Right" VerticalAlignment="Top" Width="180" Margin="10" Click="UploadButton_Click"/>
        <Label Name="StatusLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>